<h1>
  <%= @profile.full_name %>'s Profile!
</h1>

<div class="picture-weather">
  <div class="picture">
    <%= image_tag @profile.picture_url %>
  </div>

  <div class="weather">
    <%= image_tag @weather.image.url %>
    <%= @weather.condition.temp %><br>
    <%= @weather.condition.text %>
  </div>
</div>

<div class="personal-info">
  Birthday: <%= @profile.birthday %><br>
  Zodiac: <%= @profile.zodiac %><br>
  Location: <%= @profile.location %><br>
  Hobbies: <%= @profile.hobbies %>
</div>

<%= render partial: 'shared/posts', locals: { posts: @my_posts } %>
