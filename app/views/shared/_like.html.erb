<% if post.likes.empty? %>
  <%= button_to "like", post_like_path(post), method: :post, remote: true, data: { post_id: post.id }, class: 'Post-likes Post-likes--unliked' %>
<% elsif post.liked_by?(current_user) %>
  <%= link_to "#{pluralize(post.likes_count, 'like')}", post_like_path(post), remote: true, method: :delete, class: 'Post-likes Post-likes--liked', data: { post_id: post.id } %>
<% else %>
  <%= link_to "#{pluralize(post.likes_count, 'like')}", post_like_path(post), remote: true, method: :post, class: 'Post-likes Post-likes--unliked', data: { post_id: post.id } %>
<% end %>
