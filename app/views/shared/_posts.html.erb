<div>
  <% if posts.any? %>
    <table class="PostTable">
      <thead>
        <h4 class="PostHeading">Posts</h4>
        <tr>
          <th>content</th>
          <th>author</th>
          <th>emotion</th>
          <th>published at</th>
        </tr>
      </thead>
      <tbody>
        <% posts.each do |post| %>
          <tr>
            <td><%= post.censored_content %></td>
            <td><%= post.user.full_name %></td>
            <td><%= post.emotion %></td>
            <td><%= post.created_at %></td>
            <td><%= link_to 'View Post', post_path(post) %></td>
            <td><%= render "shared/like", post: post %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <h3>No posts to see here...yet</h3>
  <% end %>
</div>
